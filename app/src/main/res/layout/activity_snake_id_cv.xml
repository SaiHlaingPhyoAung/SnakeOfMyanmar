<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".snake_id_cv"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <com.denzcoskun.imageslider.ImageSlider
                android:id="@+id/imageSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:iss_period="1500"
                app:iss_auto_cycle="true"
                app:iss_delay="1500" />

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back_white"
                android:layout_marginLeft="10dp"
                android:padding="15dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frameLayout"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvOne"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/greycliffcf_regular"
            android:textColor="#333333"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTwo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="30dp"
            android:layout_below="@id/frameLayout"
            app:cardCornerRadius="50dp"
            android:layout_marginTop="10dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#f3f3f3"
            android:layout_alignParentRight="true">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#f3f3f3">

                <TextView
                    android:id="@+id/tvCardOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="အဆိပ်"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/tvCardTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_below="@id/tvCardOne"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:padding="10dp"
            android:text=""
            android:fontFamily="@font/greycliffcf_regular"
            android:layout_marginLeft="30dp"
            android:lineHeight="35dp"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/tvTwo"/>

    </RelativeLayout>

</ScrollView>