<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6FFFFF7"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snake Of"
        android:textColor="#333333"
        android:fontFamily="@font/greycliffcf_regular"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tvTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="Myanmar"
        android:textColor="#333333"
        android:fontFamily="@font/greycliffcf_regular"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <RelativeLayout
                android:id="@+id/rlSnakeId"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_green"/>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snake ID"
                            android:fontFamily="@font/greycliffcf_regular"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#333333"
                            android:background="#00000000"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="80dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/anaconda"
                            android:rotationY="180"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_green"/>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Look Alike"
                            android:fontFamily="@font/greycliffcf_regular"
                            android:textSize="20sp"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#333333"
                            android:background="#00000000"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="120dp"
                            android:scaleType="centerInside"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@id/ivTwo"
                            android:src="@drawable/three"
                            android:rotationY="180"/>

                        <ImageView
                            android:id="@+id/ivTwo"
                            android:layout_width="70dp"
                            android:layout_height="120dp"
                            android:src="@drawable/one"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:rotationY="180"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_green"/>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="First Aid "
                            android:textSize="20sp"
                            android:fontFamily="@font/greycliffcf_regular"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#333333"
                            android:background="#00000000"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="100dp"
                            android:scaleType="centerInside"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/red_cross"
                            android:rotationY="180"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>






            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_green"/>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hospitals"
                            android:textSize="20sp"
                            android:fontFamily="@font/greycliffcf_regular"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#333333"
                            android:background="#00000000"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_marginRight="10dp"
                            android:layout_height="100dp"
                            android:layout_centerVertical="true"
                            android:scaleType="centerInside"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/hospitals"
                            android:rotationY="180"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="30dp"
                    android:layout_margin="10dp">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:background="@drawable/background_green"/>

                    <RelativeLayout
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="About Us "
                            android:textSize="20sp"
                            android:fontFamily="@font/greycliffcf_regular"
                            android:layout_marginLeft="10dp"
                            android:textStyle="bold"
                            android:textAllCaps="false"
                            android:textColor="#333333"
                            android:background="#00000000"
                            android:layout_centerVertical="true"/>

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_marginRight="15dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/i"
                            android:rotationY="180"/>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>






            </RelativeLayout>


        </LinearLayout>

    </ScrollView>

    
</LinearLayout>